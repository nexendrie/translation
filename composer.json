{
    "name": "nexendrie/translation",
    "description": "Easy translating of PHP applications",
    "keywords": [
      "translation", "translating", "localization", "nette", "neon", "json", "ini", "yaml"
    ],
    "license": "BSD-3-Clause",
    "homepage": "https://nexendrie.gitlab.io",
    "authors": [
        {
            "name": "Jakub Konečný",
            "email": "jakub.konecny2@centrum.cz",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/nexendrie/translation/",
        "issues": "https://gitlab.com/nexendrie/translation/issues"
    },
    "require": {
        "php": ">=7.1.0",
        "nette/utils": "^2.4",
        "nette/finder": "^2.4"
    },
    "require-dev": {
        "nexendrie/code-quality": "dev-master",
        "nette/di": "^2.4",
        "tracy/tracy": "^2.4",
        "symfony/yaml": "^3.3",
        "nette/neon": "^2.4",
        "phpstan/phpstan-nette": "^0.7"
    },
    "suggest": {
        "nette/di": "For easier integration to Nette applications",
        "tracy/tracy": "For debugger panel",
        "nette/neon": "To use NeonLoader",
        "ext-json": "To use JsonLoader",
        "symfony/yaml": "To use YamlLoader",
        "nette/application": "To use param locale resolver in Nette applications",
        "nette/http": "To use session and header locale resolvers in Nette applications"
    },
    "autoload": {
        "psr-4": {
            "Nexendrie\\Translation\\": "src/"
        },
        "classmap": ["src/exceptions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Nexendrie\\Translation\\": "tests/"
        }
    },
    "config": {
        "classmap-authoritative": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
